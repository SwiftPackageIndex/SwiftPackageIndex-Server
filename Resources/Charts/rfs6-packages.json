{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 600,
    "height": 350,
    "padding": 5,
    "data": [
        {
            "name": "table",
            "transform": [
                {
                    "type": "formula",
                    "expr": "datetime(datum.snapshotYear, datum.snapshotMonth, datum.snapshotDay)",
                    "as": "snapshotDate"
                }
            ],
            "values": [
                { "snapshotYear": 2024, "snapshotMonth": 2, "snapshotDay": 5, "numPackages": 301 },
                { "snapshotYear": 2024, "snapshotMonth": 2, "snapshotDay": 18, "numPackages": 329 },
                { "snapshotYear": 2024, "snapshotMonth": 2, "snapshotDay": 26, "numPackages": 360 },
                { "snapshotYear": 2024, "snapshotMonth": 3, "snapshotDay": 30, "numPackages": 561 },
                { "snapshotYear": 2024, "snapshotMonth": 5, "snapshotDay": 9, "numPackages": 819 },
                { "snapshotYear": 2024, "snapshotMonth": 5, "snapshotDay": 30, "numPackages": 1200 },
                { "snapshotYear": 2024, "snapshotMonth": 6, "snapshotDay": 29, "numPackages": 1926 }
            ]
        }
    ],
    "scales": [
        {
            "name": "xscale",
            "type": "time",
            "domain": [{ "signal": "datetime(2024, 2, 1)" }, { "signal": "datetime(2024, 10, 1)" }],
            "range": "width"
        },
        {
            "name": "yscale",
            "type": "linear",
            "domain": { "data": "table", "field": "numPackages" },
            "range": "height",
            "nice": true
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "xscale",
            "grid": true,
            "labelFont": {
                "value": "-apple-system, BlinkMacSystemFont, 'SF Hello', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
            },
            "labelFontSize": { "value": 14 },
            "labelAngle": { "value": -45 },
            "labelAlign": { "value": "right" }
        },
        {
            "orient": "left",
            "scale": "yscale",
            "labelFont": {
                "value": "-apple-system, BlinkMacSystemFont, 'SF Hello', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
            },
            "labelFontSize": { "value": 14 },
            "title": "Number of compatible packages",
            "titlePadding": { "value": 20 },
            "titleFont": {
                "value": "-apple-system, BlinkMacSystemFont, 'SF Hello', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
            },
            "titleFontWeight": { "value": "normal" },
            "titleFontSize": { "value": 14 }
        }
    ],
    "marks": [
        {
            "type": "line",
            "from": { "data": "table" },
            "encode": {
                "enter": {
                    "x": { "scale": "xscale", "field": "snapshotDate" },
                    "y": { "scale": "yscale", "field": "numPackages" },
                    "stroke": { "value": "#356fce" },
                    "strokeWidth": { "value": 3 }
                }
            }
        },
        {
            "type": "symbol",
            "from": { "data": "table" },
            "encode": {
                "enter": {
                    "x": { "scale": "xscale", "field": "snapshotDate" },
                    "y": { "scale": "yscale", "field": "numPackages" },
                    "size": { "value": 60 },
                    "tooltip": {
                        "signal": "timeFormat(datum.snapshotDate, '%b %d, %Y') + ' - ' + datum.numPackages + ' packages'"
                    }
                }
            }
        }
    ]
}
