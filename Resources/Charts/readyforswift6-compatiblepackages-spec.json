{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 600,
    "height": 350,
    "padding": 5,

    "data": [
        {
            "name": "table"
        }
    ],

    "scales": [
        {
            "name": "xscale",
            "type": "linear",
            "domain": [35, 300],
            "range": "width",
            "nice": false,
            "zero": false
        },
        {
            "name": "yscale",
            "type": "linear",
            "domain": { "data": "table", "field": "numPackages" },
            "range": "height",
            "nice": true
        }
    ],

    "axes": [
        {
            "orient": "bottom",
            "scale": "xscale",
            "title": "Day of Year"
        },
        {
            "orient": "left",
            "scale": "yscale",
            "title": "Packages"
        }
    ],

    "marks": [
        {
            "type": "line",
            "from": { "data": "table" },
            "encode": {
                "enter": {
                    "x": { "scale": "xscale", "field": "dayOfYear" },
                    "y": { "scale": "yscale", "field": "numPackages" },
                    "stroke": { "value": "steelblue" }
                }
            }
        }
    ]
}
